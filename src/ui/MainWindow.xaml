<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        xmlns:vm="clr-namespace:UI.ViewModel"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="MainWindow" Height="700" Width="500">
    <Window.Resources>
        <vm:InvertConverter x:Key="invert" />
        <vm:VisibleWhenFalseConverter x:Key="visibilityFalse" />
        <vm:VisibleWhenTrueConverter x:Key="visibilityTrue" />
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Height" Value="50" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="FontSize" Value="20" />
        </Style>
        <Style x:Key="IconButtonBorder" TargetType="Border">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="4" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightGray" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightGray" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <DataTemplate x:Key="PictureListTemplate">
            <Grid Margin="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0"
                       Width="70">
                    <Image.Source>
                        <BitmapImage DecodePixelWidth="70" UriSource="{Binding Path=Path}" />
                    </Image.Source>
                </Image>
                <Grid Grid.Column="1">
                    <TextBlock FontSize="30"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Text="{Binding Path=Name}" />
                </Grid>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button IsEnabled="{Binding Path=PictureMode}"
                    Click="Picture_Click"
                    Style="{StaticResource TabButton}">Pictures</Button>
            <Button IsEnabled="{Binding Path=PictureMode, Converter={StaticResource invert}}"
                    Click="Video_Click"
                    Style="{StaticResource TabButton}"
                    Margin="10,0,0,0">Video</Button>
        </StackPanel>

        <ListBox Grid.Row="1"
                 HorizontalContentAlignment="Stretch"
                 ItemTemplate="{StaticResource PictureListTemplate}"
                 Name="PictureList" />

        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   Visibility="{Binding Path=PictureMode, Converter={StaticResource visibilityFalse}}">
            video view
        </TextBlock>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal">
            <Border Style="{StaticResource IconButtonBorder}">
                <Button Style="{StaticResource IconButton}"
                        FontSize="30"
                        Margin="15"
                        Click="AddPicture_Click">
                    &#xE948;
                </Button>
            </Border>
        </StackPanel>
    </Grid>
</Window>
